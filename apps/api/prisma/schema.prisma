generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Doctor {
  id          String   @id @default(cuid())
  name        String
  specialty   String
  address     String
  latitude    Float
  longitude   Float
  phone       String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  credentials CalendarCredential?
  appointments Appointment[]

  @@index([specialty])
  @@index([latitude, longitude])
}

model CalendarCredential {
  id            String   @id @default(cuid())
  doctorId      String   @unique
  encryptedToken String  // Encrypted refresh token
  accessToken   String?  // Temporary, not persisted long-term
  tokenExpiry   DateTime?
  calendarId    String   @default("primary")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  doctor        Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId])
}

model Patient {
  id          String            @id @default(cuid())
  name        String
  email       String            @unique
  phone       String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  appointments Appointment[]
  symptoms    PatientSymptom[]
}

model Appointment {
  id            String   @id @default(cuid())
  doctorId      String
  patientId     String?
  startUtc      DateTime
  endUtc        DateTime
  userName      String
  userEmail     String
  userPhone     String?
  reason        String?
  notes         String?
  symptoms      String?
  gcalEventId   String?  // Google Calendar event ID
  status        String   @default("confirmed") // confirmed, cancelled, completed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  doctor        Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  patient       Patient? @relation(fields: [patientId], references: [id], onDelete: SetNull)

  @@index([doctorId, startUtc])
  @@index([userEmail])
  @@index([patientId])
}

model PatientSymptom {
  id        String   @id @default(cuid())
  patientId String
  symptom   String
  notedAt   DateTime @default(now())

  patient   Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@unique([patientId, symptom])
  @@index([symptom])
}

model Chat {
  id          String        @id @default(cuid())
  title       String?       // Optional title for the chat
  userId      String?       // Optional user identifier (email or session ID)
  metadata    String?       // JSON string for additional metadata (doctorId, specialty, etc.)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  messages    ChatMessage[]

  @@index([userId])
  @@index([createdAt])
}

model ChatMessage {
  id        String   @id @default(cuid())
  chatId    String
  role      String   // "user" | "assistant" | "system"
  content   String
  metadata  String?  // JSON string for additional data (action, tool calls, etc.)
  createdAt DateTime @default(now())

  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId, createdAt])
}


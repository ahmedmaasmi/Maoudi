generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Doctor {
  id          String   @id @default(cuid())
  name        String
  specialty   String
  address     String
  latitude    Float
  longitude   Float
  phone       String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  credentials CalendarCredential?
  appointments Appointment[]

  @@index([specialty])
  @@index([latitude, longitude])
}

model CalendarCredential {
  id            String   @id @default(cuid())
  doctorId      String   @unique
  encryptedToken String  // Encrypted refresh token
  accessToken   String?  // Temporary, not persisted long-term
  tokenExpiry   DateTime?
  calendarId    String   @default("primary")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  doctor        Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId])
}

model Appointment {
  id            String   @id @default(cuid())
  doctorId      String
  startUtc      DateTime
  endUtc        DateTime
  userName      String
  userEmail     String
  userPhone     String?
  gcalEventId   String?  // Google Calendar event ID
  status        String   @default("confirmed") // confirmed, cancelled, completed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  doctor        Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, startUtc])
  @@index([userEmail])
}

